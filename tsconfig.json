{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": [
      "ES2021"
    ],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": false,
    "noImplicitAny": false, //TODO set to true once all data has types
    "target": "ES2021",
    "typeRoots": [
      "node_modules/@types",
      // "node_modules/types",
      "src/ts-types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictNullChecks": false,
    "useUnknownInCatchVariables": false,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}