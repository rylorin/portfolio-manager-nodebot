{
  "name": "nodebot",
  "repository": {
    "url": "https://github.com/rylorin/nodebot"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/",
    "LICENSE"
  ],
  "scripts": {
    "bot:updater": "node dist/index.js -watch -update",
    "build": "yarn run server:build && yarn run client:build",
    "build:watch": "yarn tsc --watch",
    "clean": "rm -rf dist",
    "client:build": "vite build",
    "client:dev": "vite",
    "dev": "concurrently \"yarn server:dev\" \"yarn client:dev\"",
    "doc": "typedoc --excludeInternal",
    "doc:dev": "typedoc --out ./doc-dev",
    "lint": "eslint ./src",
    "prepare": "husky",
    "prepublishOnly": "yarn build",
    "qc": "prettier --check . && stylelint \"**/*.css\" && yarn lint && tsc --noEmit",
    "release": "yarn lint && yarn qc && yarn doc && yarn build && yarn run storybook:build",
    "serve": "vite preview",
    "server:build": "tsc --project tsconfig.server.json",
    "server:dev": "ts-node-dev --project tsconfig.server.json src/index -watch -server -account -import -trader",
    "start": "yarn && node dist/index.js -server -watch"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.28.1",
    "@emotion/react": "^11.14.0",
    "@stoqey/ib": "^1.5.3",
    "@tanstack/react-table": "^8.21.3",
    "chakra-react-select": "^6.1.0",
    "chart.js": "^4.5.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "fast-xml-parser": "^5.3.1",
    "formik": "^2.4.6",
    "json-stringify-safe": "^5.0.1",
    "luxon": "^3.7.2",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.5",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "sqlite3": "^5.1.7",
    "winston": "^3.18.3",
    "yahoo-finance2": "^3.10.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@smarttools/eslint-plugin-rxjs": "^1.0.22",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/json-stringify-safe": "^5.0.3",
    "@types/node": "^22.19.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-router-dom": "^5.3.3",
    "@types/validator": "^13.15.4",
    "@vitejs/plugin-react": "^5.1.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "http-proxy-middleware": "^3.0.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "patch-package": "^8.0.1",
    "prettier": "^3.6.2",
    "rxjs": "7.8.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.0",
    "webpack": "^5.102.1"
  },
  "engines": {
    "node": "^22.21.1"
  }
}
